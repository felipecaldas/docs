{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Tabario Docs",
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.svg",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart"
            ]
          },
          {
            "group": "Creating with Tabario",
            "pages": [
              "guide/idea-generation",
              "guide/editing-scripts",
              "guide/video-styles",
              "guide/video-generation"
            ]
          },
          {
            "group": "Advanced Topics",
            "pages": [
              "guide/roadmap",
              "guide/troubleshooting",
              "guide/faq"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "API",
            "pages": [
              "api/introduction"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Tabario Website",
          "href": "https://www.tabario.com",
          "icon": "globe"
        },
        {
          "anchor": "Contact Support",
          "href": "mailto:support@tabario.com",
          "icon": "envelope"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Website",
        "href": "https://www.tabario.com"
      },
      {
        "label": "Contact",
